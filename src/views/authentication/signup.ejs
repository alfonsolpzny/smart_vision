<%- include('../partials/_header') %>
<link href="css/style_signin.css" rel="stylesheet" type="text/css">
    <title>Ingresar</title>
    
</head>
<body>
        <!--NAVBAR-->
        <%- layout('layouts/main') %>
            <!--NAVBAR--> 
          <br>
        <% if(user){ %>
          
          <% if(user.username == "gkn" ){ %>
            <div class="container"> <!-- class="container-fliud"-->            
              <div class="row">
                  <div class="col-3"></div>
                  <div id="formulario" class="col-6 vh-0 d-flex justify-content-center">                  
                      <form form action="/signup" method="POST">
                          <div class="form-group mx-auto ">
                              <h1>Añadir Usuario</h1>
                            <label for="exampleInputEmail1">Nombre</label>
                            <input type="text" name="fullname" placeholder="Full Name" class="form-control mb-3">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            <input type="text" name="username" placeholder="Username" class="form-control mb-3">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputPassword1">Contraseña</label>
                            <input type="password" name="password" placeholder="Password" class="form-control mb-3">
                          </div>
                          <button type="submit" class="btn btn-dark mb-3">Añadir </button>
                          <br>
                        </form>
                  </div>  
              </div>
          </div>
          <%}else{%>
              <h1>Acceso denegado</h1>
          <% } %>
      <% }else{%>
          <h1>Acceso denegado</h1>
      <% } %>
  
