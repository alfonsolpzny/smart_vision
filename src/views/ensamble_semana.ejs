  <script>
    fetch("/estadisticasSemanas")
      .then(function (resp) {
        return resp.json();
      })
      .then(function (rows) {
        //para el promedio y conteo de las OK
        const PiezasOK = [];
        var cantidad_HoraOk = 0;
        //para el promedio y conteo de las NOK
        const PiezasNOK = []
        var cantidad_HoraNok = 0;
        //Variables para la grafica del dia agrupada en las horas
     
        
        const diasNOK = [];
    
      
        const programs = []; //para la ocurrencia de horas
        //para la grafica de circulos
        const countPrograms = [];
        const labelPrograms = [];
        const dataPrograms = [];
        //variables para los dias
        const DiasFecha = [];
        const countDias = [];
        const labelDias = [];
        const countDiasOK = [];
        const countDiasNOK = [];
        const test = [];
        const countTest = [];


        rows.forEach(function (rows) { //ciclo para la recoleccion de todos los
          if ((rows.clasification == 1)) { // si son piezas buenas
            PiezasOK.push(rows.coincidence);
            cantidad_HoraOk += 1;
          }
          if ((rows.clasification == 0)) { //si son piezas malas
            PiezasNOK.push(rows.coincidence)
            cantidad_HoraNok += 1;
          }
          DiasFecha.push(rows.fecha); //para las fechas
          programs.push(rows.program_name);// para locurencia delos programas
        });

        //para grafica de ocurrencia de programas
        for (const num of programs) {
          countPrograms[num] = countPrograms[num] ? countPrograms[num] + 1 : 1;
        }
        Object.keys(countPrograms).forEach((prop) => labelPrograms.push(prop)); //Etiquetas para la  ocurrencia de progranas - Final
        Object.values(countPrograms).forEach((prop) => dataPrograms.push(prop)); //valores para la  ocurrencia de progranas - Final


        //Para la grafica los dias
        for (const num of DiasFecha) {
          countDias[num] = countDias[num] ? countDias[num] + 1 : 1;
        }
        Object.keys(countDias).forEach((prop) => labelDias.push(prop)); //Etiquetas para la grafiica de los dias - Final
       
       
        //console.log(diasNOK);
        for(let i=0; i<labelDias.length;i++){
          countDiasOK[i]=0;
          countDiasNOK[i]=0;
        }
        
        
        for(let i=0;i<labelDias.length; i++){
          rows.forEach(function (rows) { //ciclo para la recoleccion de todos los
            if ((rows.clasification == 1)) { //si son piezas malas
              if(labelDias[i]==rows.fecha){
              
                countDiasOK[i]++;
              }
            }            
            if ((rows.clasification == 0)) { //si son piezas malas
              if(labelDias[i]==rows.fecha){
              
                countDiasNOK[i]++;
              }
            }
        });
        }
        console.log(countDiasOK);
        console.log(countDiasNOK);
        
        


        var chartColors = {
          green: 'rgba(0, 128, 0, 1)',
          grennBG: 'rgba(0, 255, 30,0.2)',
          red: 'rgba(255, 99, 132, 1)',
          redBG: 'rgba(255, 99, 132, 0.8)'
        }

        //Grafica del dia agrupada en horas
        var ctxDias = document.getElementById('myChartDias').getContext('2d');
        var myChartDias = new Chart(ctxDias, {
          type: 'bar',
          data: {
            labels: labelDias, //etiquetas del eje X
            datasets: [{
              label: 'OK', //etiqueta general
              data: countDiasOK, //[cantidad de concidencias mayores a 70, cantidad de coincidencias menor a 70]
              backgroundColor: [
                'rgba(0, 255, 30,0.2)',

              ],
              borderColor: [
                'rgba(0, 128, 0, 1)',

              ],
              borderWidth: 1
            }, {
              label: 'NOK', //etiqueta general
              data: countDiasNOK, //[cantidad de concidencias mayores a 70, cantidad de coincidencias menor a 70]
              backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
              ],
              borderColor: [
                'rgba(255, 99, 132, 1)',
              ],
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            plugins: {
              leyend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Piezas OK y NOK por hora en los ultimos 7 días'
              }
            }
          },
        });
        //Grafica de la ocurrencia de  los programas
        var ctxPrograms = document.getElementById('myChartPrograms').getContext('2d');
        var myChartPrograms = new Chart(ctxPrograms, {
          type: 'doughnut',
          data: {
            labels: labelPrograms, //etiquetas del eje X
            datasets: [{
              label: 'OK', //etiqueta general
              data: dataPrograms, //[cantidad de concidencias mayores a 70, cantidad de coincidencias menor a 70]
              backgroundColor: ['#77DD77', '#b39eb5','#FDFD96','#ca9bf7','#ffb7ce','#836953','#89cff0','#99c5c4','#aa9499','#aaf0d1','#ff694f'],
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            plugins: {
              leyend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Ocurrencia de programas en la ultima semana'
              }
            }
          },
        }
        );

        //Primera grafica de las OK
        var OK = PiezasOK;
        const largoOK = PiezasOK.length;
        const originalDataOK = OK;
        const labelsOK = [];
        for (let i = 0; i < largoOK; ++i) {
          labelsOK.push(i.toString());
        }

        //Segunda grafica para  las NOK
        var NOK = PiezasNOK;
        const largoNOK = PiezasNOK.length;
        const originalDataNOK = NOK;
        const labelsNOK = [];
        for (let i = 0; i < largoNOK; ++i) {
          labelsNOK.push(i.toString());
        }
   

        //Cuarta grafica, de barras
        var ctxNoPiezas = document.getElementById('myChartNoPiezas').getContext('2d');
        var myChartNoPiezas = new Chart(ctxNoPiezas, {
          type: 'bar',
          data: {
            labels: ['Piezas OK', 'Piezas NOK'],
            datasets: [{
              label: 'barras',
              data: [cantidad_HoraOk, cantidad_HoraNok], //[cantidad de concidencias mayores a 70, cantidad de coincidencias menor a 70]
              backgroundColor: [
                'rgba(0, 255, 30,0.2)',
                'rgba(255, 99, 132, 0.2)'
              ],
              borderColor: [
                'rgba(0, 128, 0, 1)',
                'rgba(255, 99, 132, 1)'
              ],
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            plugins: {
              leyend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Total de piezas OK y NOK de la ultima semana'
              }
            }
          },
        });
      });
  </script>
